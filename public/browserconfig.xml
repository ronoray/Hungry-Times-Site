<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <!-- Windows Tile Icons -->
      <square70x70logo src="/icon-128.png"/>
      <square150x150logo src="/icon-256.png"/>
      <wide310x150logo src="/icon-384.png"/>
      <square310x310logo src="/icon-512.png"/>
      <!-- Background color for pinned tiles -->
      <TileColor>#0B0B0B</TileColor>
    </tile>
    <notification>
      <polling-uri src="/notifications/"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>
  </msapplication>
</browserconfig>
